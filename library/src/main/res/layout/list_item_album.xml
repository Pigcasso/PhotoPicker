<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingBottom="8dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/iv_photo_picker_album_cover"
        android:layout_width="@dimen/album_cover_size"
        android:layout_height="@dimen/album_cover_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/module_photo_picker_album_cover"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_photo_picker_album_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/module_photo_picker_album_checkbox"
        android:src="@drawable/ic_radio_button_checked_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_photo_picker_album_cover"
        android:layout_toStartOf="@id/iv_photo_picker_album_checkbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_photo_picker_album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Album Name"/>

        <TextView
            android:id="@+id/tv_photo_picker_photo_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Photo Count"/>
    </LinearLayout>

</RelativeLayout>